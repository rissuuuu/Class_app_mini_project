<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".OUR_TEAM"
android:background="@color/dashboard"
    >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="250dp"
            android:background="@drawable/dashboard">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_light"
                android:text="To  Our Team"
                android:textSize="50sp"
                android:layout_marginTop="135dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_height="200dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"



                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/clickai"
                        >

                        <ImageView
                            android:id="@+id/clickhead"
                            android:layout_width="1000dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ai"
                            android:layout_centerInParent="true"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/clickhead"
                            android:layout_marginTop="0dp"
                            android:layout_centerInParent="true"
                            android:text="Artificial Intelligence"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20sp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"


                    >
                    <RelativeLayout
                        android:id="@+id/clickit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/clickprojects"
                            android:layout_width="1000dp"
                            android:layout_height="100dp"
                            android:src="@drawable/it"
                            android:layout_centerInParent="true"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/clickprojects"
                            android:layout_marginTop="0dp"
                            android:layout_centerInParent="true"
                            android:text="Information tech"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20sp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>




</LinearLayout>

</RelativeLayout>