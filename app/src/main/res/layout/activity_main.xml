<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backg"

    >
    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Mini Project"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/min"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="SCHOOL OF COMPUTER AND INFORMATION SCIENCES"
        android:textColor="@color/white"
        android:textSize="25sp" />
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/logos" />

    <TextView
        android:id="@+id/load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading...Please be patient"
        android:textColor="@android:color/background_light"
        android:layout_below="@id/imageView9"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>
    <ProgressBar
        android:background="@drawable/progress"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar1"
        android:layout_below="@id/load"
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="70dp" />

</RelativeLayout>